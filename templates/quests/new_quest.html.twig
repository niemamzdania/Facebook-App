<div class="container">
    <form action="{{ path('add_quest') }}" method="POST">
        <div class="row">Content:<input type="textarea" name="Content" value="{{ quest.Content }}" required></div>
        <div class="row">Date:<input type="date" min="{{ minDate }}" max="{{ maxDate }}" name="EndDate" required></div>
        <div class="row"><select name="Status" required>
                <option value=0 {% if quest.Status == 0 %}selected{% endif %}>0%</option>
                <option value=20 {% if quest.Status == 20 %}selected{% endif %}>20%</option>
                <option value=40 {% if quest.Status == 40 %}selected{% endif %}>40%</option>
                <option value=60 {% if quest.Status == 60 %}selected{% endif %}>60%</option>
                <option value=80 {% if quest.Status == 80 %}selected{% endif %}>80%</option>
                <option value=100 {% if quest.Status == 100 %}selected{% endif %}>100%</option>
            </select>
        </div>
        <div class="row"><select name="user" required>
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.login }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="row"><input type="submit" value="Submit"></div>
    </form>
</div>
