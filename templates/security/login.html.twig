{% extends 'mainpage/main.html.twig' %}
{% block title %}
    {% trans %}Zaloguj siÄ™{% endtrans %}!
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <div id="LoginForm">
        <div class="container">
            <div class="login-form">
                <div class="main-div">
                    {% if app.request.locale == 'pl_PL' %}
                        <a id="en" style="float: right;" href="#" onclick="changeLanguage(this.id)"><i>ðŸ‡ºðŸ‡¸</i></a>
                    {% elseif app.request.locale == 'en' %}
                        <a id="pl_PL" style="float: right;" href="#" onclick="changeLanguage(this.id)"><i>ðŸ‡µðŸ‡±</i></a>
                    {% endif %}
                    <form style="clear: both;" method="post">
                        <h1 class="h3 mt-5 mb-5 font-weight-normal">{% trans %}Strona logowania{% endtrans %}</h1>
                        <label class="sr-only" for="inputLogin">Login</label>
                        <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control"
                               placeholder="Login" required autofocus>
                        <label class="sr-only" for="inputPassword">Password</label>
                        <input class="form-control mt-3" id="inputPassword" name="password"
                               placeholder="{% trans %}HasÅ‚o{% endtrans %}"
                               required type="password">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% if error %}
                            <div class="mt-3 alert alert-danger alert-dismissible fade show" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endif %}
                        <div class="forgot mt-2">
                            <a href="{{ path('reset') }}">{% trans %}ZapomniaÅ‚eÅ› hasÅ‚a{% endtrans %}?</a>
                        </div>
                        <button class="btn btn-lg btn-primary" type="submit">{% trans %}Zaloguj{% endtrans %}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
