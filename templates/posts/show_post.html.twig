{% extends('mainpage/main.html.twig') %}
{% block content %}
     {% if message is defined %}
        <div class="mt-3 alert alert-primary alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <div class="post_show">
        <div class="row">
            <div class="col-6">
                <h1>Post:</h1>
                {% if post == true %}
                    <p style="font-weight: bold;"><h4>Date:</h4>
                    {{ post.Date|date("F jS \\a\\t g:ia") }}</p>
                    <p><h4>Author:</h4>
                    {{ post.User.Login }}</p>
                    <p><h4>Title:</h4>
                    {{ post.Title }}</p>
                    <p><h4>Content:</h4>
                    {{ post.Content }}</p>
                {% endif %}
            </div>
            <div class="col-6">
                <h1>Photo:</h1>
                {% if photoPath is defined %}
                    <div class="show_image" data-toggle="modal" data-target="#exampleModal321">
                        <img class="mt-3"
                             style="max-width: 100%; border-radius: 5px; border: 2px solid gray; margin-bottom: 30px;"
                             src="{{ asset('uploads/photos/') }}{{ photoPath }}">
                        <i class="fas fa-search-plus zoom"></i>
                    </div>
                {% else %}
                    <div style="width: 300px; height: 200px; border-radius: 5px; border: 2px solid gray; text-align: center; margin-bottom: 30px; padding-top: 70px; ">
                        <h1>No image</h1>
                    </div>
                {% endif %}
            </div>
        </div>
        <a href="{{ path('show_posts') }}">
            <div class="btn btn-lg btn-primary mt-3 mb-4" href="/posts">Back</div>
        </a>
    </div>
    <!-- Modal Photo -->
    <div class="modal fade" id="exampleModal321" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><h1>Photo</h1></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% if photoPath is defined %}
                            <img class="mt-3" style="max-height: 650px; width: 100%; " src="{{ asset('uploads/photos/') }}{{ photoPath }}">
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Photo -->
{% endblock %}
