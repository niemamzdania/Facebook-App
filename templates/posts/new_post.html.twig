{% extends 'mainpage/main.html.twig' %}
{% block content %}
    <div class="container-fluid container_new_post mt-5">

        <h1 class="mb-5">Add new Post</h1>

        {{ form_start(form) }}
        {{ form_row(form.Title) }}
        {{ form_row(form.Content) }}
        <div class="mt-3">{{ form_label(form.name) }}</div>
       {{ form_widget(form.name) }}
        <div><button class="btn btn-dark mt-5">Add Post</button></div>
        {{ form_end(form) }}
    </div>
    <script>
        document.querySelector("#post_form_name").className += "btn btn-secondary";
    </script>
{% endblock %}
