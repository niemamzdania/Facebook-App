{% extends 'mainpage/main.html.twig' %}
{% block content %}
    {% if message is defined %}
        <div class="mt-3 alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% elseif error is defined %}
        <div class="mt-3 alert alert-danger alert-dismissible fade show" role="alert">
            {{ error }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <h1 style="margin: 25px;">Users list</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">login</th>
                <th scope="col">e-mail</th>
                <th scope="col">Role</th>
                <th scope="col">Change email</th>
                <th scope="col">Change Role</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <th>{{ user.id }}</th>
                    <td>{{ user.login }}</td>
                    <td>{{ user.email }}</td>
                    {% if user.roles[0] == "ROLE_ADMIN" %}
                        <td>Admin</td>
                    {% elseif user.roles[0] == "ROLE_USER" %}
                        <td>User</td>
                    {% endif %}
                    <td>
                        <a onclick="get_number(this.id, this.getAttribute('data-email'), this.getAttribute('data-role'))" class="btn btn-warning" id="{{ user.id }}" data-email="{{ user.email }}" data-role="{{ user.roles[0] }}" data-target="#exampleModalCenterChangeEmail" data-toggle="modal">Change email</a>
                    </td>
                    <td>
                        <a onclick="get_number(this.id, this.getAttribute('data-email'), this.getAttribute('data-role'))" class="btn btn-warning" id="{{ user.id }}" data-email="{{ user.email }}" data-role="{{ user.roles[0] }}" data-target="#exampleModalCenterChangeRole" data-toggle="modal">Change role</a>
                    </td>
                    <td>
                        <a onclick="get_number(this.id)" class="btn btn-danger" id="{{user.id}}" data-target="#exampleModalCenterDelete" data-toggle="modal">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <!--Delete modal-->
    <div aria-hidden="true" aria-labelledby="exampleModalCenterTitle" class="modal fade" id="exampleModalCenterDelete" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h1>
                        <i class="far fa-question-circle mt-2"></i>
                    </h1>
                    <h2 class="mt-4 mb-3">
                        <bold>Are you sure?</bold>
                    </h2>
                    <h5>Do you want to delete user?</h5>
                    <a class="action" id="/post/delete/">
                        <button class="delete_user btn-lg btn-outline-danger mt-5 mr-2">Delete</button>
                    </a>
                    <button class="btn-lg btn-outline-secondary mt-5 ml-2" data-dismiss="modal" type="button">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!--Delete modal-->
    <!--Email modal-->
    <div aria-hidden="true" aria-labelledby="exampleModalCenterTitle" class="modal fade" id="exampleModalCenterChangeEmail" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h2>Change email</h2>
                    <form class="emailForm" method="Post" action="">
                        <input type="email" name="email" maxlength="50" class="form-control mt-3" id="exampleInputEmail" aria-describedby="emailHelp" required>
                    </div>
                    <button style="width:95%; margin:auto;" class="mt-3 mb-3 btn-lg btn-warning" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--Email modal-->
<!--Role modal-->
<div aria-hidden="true" aria-labelledby="exampleModalCenterTitle" class="modal fade" id="exampleModalCenterChangeRole" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="mb-2 modal-body text-center">
                <h2>Change role</h2>
                <form class="editRole" method="Post" action="">
                    <select class="role_input browser-default custom-select" name="roles" required>
                        <option value="ROLE_ADMIN" selected="">Admin</option>
                        <option value="ROLE_USER">User</option>
                    </select>
                </div>
                <button style="width:95%; margin:auto;" class="mt-3 mb-3 btn-lg btn-warning" type="submit">Save</button>
            </form>
        </div>
    </div>
</div></div><!-- Role modal--><script>
let number;
let user_email;
let user_role;

function get_number(clicked_id, email, role) {
    number = clicked_id;
    user_email = email;
    user_role = role;
    document.querySelector('#exampleInputEmail').placeholder = user_email;
    document.querySelector('.role_input').value = user_role;
    document.querySelector('.emailForm').action = "/edit/email/".concat(number);
    document.querySelector('.editRole').action = "/edit/role/".concat(number);
}

document.querySelector(".delete_user").onclick = function () {
    delete_trigger()
};


function delete_trigger() {
    window.location.href = '/user/delete/'.concat(number);
}</script>{% endblock %}
