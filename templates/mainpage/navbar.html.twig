    <script>
        function changeLanguage(clicked_id) {
            let url = '{{ path('change_lang', {lang: 'clicked_id'}) }}';
            url = url.replace("clicked_id", clicked_id);
            $.ajax({
                url: url,
            });
            location.reload();
        }
