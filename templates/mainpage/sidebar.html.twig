{% block sidebar %}
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a class="brand-link" href="#">
            <i class="fab fa-docker" style="-margin-left: 19px; size:3x"></i>
            <span class="brand-text font-weight-light" style="margin-left: 5px;">Pszemke.App!
            </span>
        </a>
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-accordion="false" data-widget="treeview"
                    role="menu">
                    <li class="nav-item  active treeview menu-open">
                        <a class="nav-link" href="#">
                            <i class="nav-icon fa fa-edit"></i>
                            <p>
                                Posts
                            </p>
                        </a>
                        <ul class="nav nav-treeview" style="display: block;">
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/posts" id="/posts">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Browse</p>
                                </a>
                            </li>
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/post/new" id="/post/new">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>New Post</p>
                                </a>
                            </li>
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/facebook/edit/{{ app.user.id }}"
                                   id="/facebook/edit/{{ app.user.id }}">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Archieves</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!--********************************************************-->
                    <li class="nav-item  active treeview menu-open">
                        <a class="nav-link" href="#">
                            <i class="nav-icon fa fa-edit"></i>
                            <p>
                                Quests
                            </p>
                        </a>
                        <ul class="nav nav-treeview" style="display: block;">
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/quest/new" id="/quest/new">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>New Quest</p>
                                </a>
                            </li>
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/post/new" id="/post/new">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Edit Quest</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!--*********************************************************-->
                    <li class="nav-item  active treeview menu-open">
                        <a class="nav-link" href="#">
                            <i class="nav-icon fa fa-edit"></i>
                            <p>
                                Account
                            </p>
                        </a>
                        <ul class="nav nav-treeview" style="display: block;">
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/user/edit/{{ app.user.id }}"
                                   id="/user/edit/{{ app.user.id }}">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Account data</p>
                                </a>
                            </li>
                            <li class="nav-item archive">
                                <a class="nav-link button" href="/facebook/edit/{{ app.user.id }}"
                                   id="/facebook/edit/{{ app.user.id }}">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Facebook</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!--*********************************************************-->
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item  active treeview menu-open">
                            <a class="nav-link" href="#">
                                <i class="nav-icon fa fa-edit"></i>
                                <p>
                                    Admin
                                </p>
                            </a>
                            <ul class="nav nav-treeview" style="display: block;">
                                <li class="nav-item archive">
                                    <a class="nav-link button" href="{{ path('show_users') }}"
                                       id="{{ path('show_users') }}">
                                        <i class="fa fa-circle-o nav-icon"></i>
                                        <p>Users list</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item archive">
                            <a class="nav-link button" href="{{ path('app_register') }}"
                               id="{{ path('app_register') }}">
                                <i class="fa fa-circle-o nav-icon"></i>
                                <p>Create user</p>
                            </a>
                        </li>
                    {% endif %}
                    <!--*********************************************************-->
                </ul>
            </nav>
        </div>
    </aside>
{% endblock %}
