{% extends 'mainpage/main.html.twig' %}
{% block content %}
    <style>
        .container-fluid {
            background: white;
            padding: 30px;
            border: 1px solid lightgray;
            border-top: 3px solid gray;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

    </style>
    <div class="container-fluid mt-5">
        <h1>{% trans %}Stwórz nowego użytkownika{% endtrans %}:</h1>
        {{ form_start(registrationForm, {'start_attr': {'class': 'mt-3'}}) }}
        <div class="mt-3"><span style="cursor: default; font-weight: bold;">Login:</span></div>
        {{ form_widget(registrationForm.login, {'widget_attr': {'class': 'mt-2'}}) }}
        {{ form_errors(registrationForm.login, {'errors_attr': {'class': 'mt-2'}}) }}
        <div class="mt-3"><span style="cursor: default; font-weight: bold;">{% trans %}Imię i nazwisko{% endtrans %}:</span></div>
        {{ form_widget(registrationForm.fullName, {'widget_attr': {'class': 'mt-2'}}) }}
        {{ form_errors(registrationForm.fullName, {'errors_attr': {'class': 'mt-2'}}) }}
        <div class="mt-3"><span style="cursor: default; font-weight: bold;">Email:</span></div>
        {{ form_widget(registrationForm.email, {'widget_attr': {'class': 'mt-2'}}) }}
        {{ form_errors(registrationForm.email, {'errors_attr': {'class': 'mt-2'}}) }}
        <div class="mt-3"><span style="cursor: default; font-weight: bold;">{% trans %}Hasło{% endtrans %}:</span></div>
        {{ form_widget(registrationForm.plainPassword.first) }}
        {{ form_errors(registrationForm.plainPassword.first) }}
        <div class="mt-3"><span style="cursor: default; font-weight: bold;">{% trans %}Powtórz hasło{% endtrans %}:</span></div>
        {{ form_widget(registrationForm.plainPassword.second) }}
        {{ form_errors(registrationForm.plainPassword.second) }}
    <div class="mt-3 mb-1" style="font-weight: bold;">{% trans %}Rola{% endtrans %}:</div>
    <select class="browser-default custom-select" name="roles" required>
        <option value="ROLE_ADMIN" selected>{% trans %}Administrator{% endtrans %}</option>
        <option value="ROLE_USER">{% trans %}Pracownik{% endtrans %}</option>
        <option value="ROLE_CLIENT">{% trans %}Klient{% endtrans %}</option>
    </select>
    <button class="btn btn-dark mt-3">{% trans %}Zarejestruj{% endtrans %}</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
